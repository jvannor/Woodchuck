@page
@model AdminWeb.Pages.CameraSettings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Camera Settings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CameraSettings[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CameraSettings[0].Uri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CameraSettings[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CameraSettings[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CameraSettings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
