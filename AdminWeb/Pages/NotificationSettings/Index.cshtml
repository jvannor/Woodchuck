@page
@model AdminWeb.Pages.NotificationSettings.IndexModel

@{
    ViewData["Title"] = "Notification Settings";
}

<h1>Notification Settings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationSettings[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationSettings[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationSettings[0].Enabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NotificationSettings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
